<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/nen7">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Xin chào,"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alata">

                </TextView>

                <TextView
                    android:id="@+id/username_homeFragment"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="Trần Văn A"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alata"
                    android:maxLines="2"
                    >

                </TextView>

        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="4dp"
            android:src="@drawable/ic_notification"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/anh5"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TableRow
            android:layout_marginStart="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="4dp"
                android:background="@drawable/whitehappybank"></ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/alata"
                android:text="@string/happycard"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"></TextView>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp"
                android:src="@drawable/heart"
                ></ImageView>
            <TextView
                android:id="@+id/quantity_heart_homeFragment"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="200"
                android:textColor="#FFFFFF"
                android:textSize="45sp"
                android:padding="4dp"
                android:textStyle="bold"
                ></TextView>
        </TableRow>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="5dp"
            android:background="@drawable/white_background"
            ></ImageView>
    </LinearLayout>
    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/diary_fragment_main"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:padding="4dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/anh1"
            ></ImageView>
        <ImageView
            android:id="@+id/check_fragment_main"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/anh2"
            android:padding="4dp"
            ></ImageView>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Nhật ký
            hoạt động"
            android:padding="4dp"
            android:gravity="center"
            android:layout_marginEnd="50dp"
            android:textSize="20sp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            ></TextView>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Kiểm tra
            số dư"
            android:padding="4dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            ></TextView>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/balance_fragment_main"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:padding="4dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/anh3"
            ></ImageView>
        <ImageView
            android:id="@+id/family_fragment_main"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/anh4"
            android:padding="4dp"
            ></ImageView>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Báo cáo
            chi tiêu"
            android:padding="4dp"
            android:gravity="center"
            android:layout_marginEnd="50dp"
            android:textSize="20sp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            ></TextView>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Gia đình"
            android:padding="4dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            ></TextView>
    </TableRow>

</LinearLayout>