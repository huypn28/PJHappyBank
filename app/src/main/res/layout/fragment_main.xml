<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/nen7">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata"
                        android:text="Xin chào,"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/username_homeFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/alata"
                        android:maxLines="2"
                        android:text="Trần Văn A"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_notification" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/anh5"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/whitehappybank"
                        android:padding="4dp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/alata"
                        android:gravity="center"
                        android:text="@string/happycard"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="4dp"
                        android:src="@drawable/heart" />

                    <TextView
                        android:id="@+id/quantity_heart_homeFragment"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="200"
                        android:textColor="#FFFFFF"
                        android:textSize="45sp"
                        android:textStyle="bold" />
                </TableRow>

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/white_background" />
            </LinearLayout>

            <TableRow
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/diary_fragment_main"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="50dp"
                    android:padding="4dp"
                    android:src="@drawable/anh1" />

                <ImageView
                    android:id="@+id/check_fragment_main"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="4dp"
                    android:src="@drawable/anh2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Nhật ký\nhoạt động"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Kiểm tra\nsố dư"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/balance_fragment_main"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="50dp"
                    android:padding="4dp"
                    android:src="@drawable/anh3" />

                <ImageView
                    android:id="@+id/family_fragment_main"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="4dp"
                    android:src="@drawable/anh4" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Báo cáo\nchi tiêu"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Gia đình"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/layout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/menu_bottom_navigation" />

</RelativeLayout>