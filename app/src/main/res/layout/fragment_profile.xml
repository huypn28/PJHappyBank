<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f1f1f1"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Trang cá nhân"
        android:textSize="30sp"
        android:fontFamily="@font/alata"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="10dp"
        android:gravity="center"
        android:background="#45ffbf"
        ></TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/emoji_fragment_profile"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="4dp"
        android:layout_gravity="center"
        android:background="@drawable/yellow_circle_background"
        android:src="@drawable/daughter"
        ></ImageView>
    <TextView
        android:id="@+id/username_fragment_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trần Văn A"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/alata"
        ></TextView>
    <TextView
        android:id="@+id/email_fragment_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a@gmail.com"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/alata"
        ></TextView>
</LinearLayout>

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/alata"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/ic_key"></ImageView>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:layout_marginStart="20dp"
                android:padding="4dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:textStyle="bold"
                ></TextView>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/ic_right"
                app:tint="@color/black"
                ></ImageView>

        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/ic_logout"
                ></ImageView>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:layout_marginStart="20dp"
                android:padding="4dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:textStyle="bold"
                ></TextView>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/ic_right"
                app:tint="@color/black"
                ></ImageView>

        </TableRow>

    </LinearLayout>
</LinearLayout>